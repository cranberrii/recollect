{
  "name": "bookmark-orchestrator",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:extension": "npm run dev --workspace=apps/extension",
    "dev:backend": "cd backend && uvicorn app.main:app --reload",
    "build": "turbo run build",
    "build:web": "npm run build --workspace=apps/web",
    "build:extension": "npm run build --workspace=apps/extension",
    "lint": "turbo run lint",
    "clean": "turbo run clean"
  },
  "devDependencies": {
    "turbo": "^2.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.0.0"
}
